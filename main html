    <!-- Include jQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <!-- Include Slick Carousel JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>
    <!-- Include AOS JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
    <script>
        $(document).ready(function(){
            $('.carousel').slick({
                dots: true,
                infinite: true,
                speed: 500,
                fade: true,
                cssEase: 'linear'
            });

            // Initialize AOS
            AOS.init();

            // Image click effect
            const profileImage = document.getElementById('profileImage');
            const imageOverlay = document.getElementById('imageOverlay');
            const closeOverlay = document.getElementById('closeOverlay');

            profileImage.addEventListener('click', () => {
                imageOverlay.classList.add('active');
            });

            closeOverlay.addEventListener('click', () => {
                imageOverlay.classList.remove('active');
            });

            // Hide overlay when clicking outside the image
            imageOverlay.addEventListener('click', (e) => {
                if (e.target === imageOverlay) {
                    imageOverlay.classList.remove('active');
                }
            });

            // Smooth scrolling for section
            $('a[href^="#"]').on('click', function(event) {
                event.preventDefault();

                const target = $(this.getAttribute('href'));

                if (target.length) {
                    $('html, body').stop().animate({
                        scrollTop: target.offset().top
                    }, 1000);
                }
            });

            // Add slide-in effect for sections
            $(window).on('scroll', function() {
                $('.slide-in').each(function() {
                    const sectionTop = $(this).offset().top;
                    const windowBottom = $(window).scrollTop() + $(window).height();

                    if (sectionTop < windowBottom) {
                        $(this).addClass('slide-in');
                    }
                });
            }).trigger('scroll');

            // Change background color based on section
            $(window).on('scroll', function() {
                const scrollPos = $(window).scrollTop();

                $('section').each(function() {
                    const sectionTop = $(this).offset().top;
                    const sectionHeight = $(this).height();

                    if (scrollPos >= sectionTop && scrollPos < sectionTop + sectionHeight) {
                        const bg = $(this).data('background');
                        $('body').css('background', getBackgroundColor(bg));
                    }
                });
            });

            function getBackgroundColor(bg) {
                switch(bg) {
                    case 'light-red-yellow':
                        return 'linear-gradient(135deg, lightcoral, lightyellow)';
                    case 'dark-blue-light-blue':
                        return 'linear-gradient(135deg, darkblue, lightblue)';
                    default:
                        return '';
                }
            }
        });
    </script>
</body>
